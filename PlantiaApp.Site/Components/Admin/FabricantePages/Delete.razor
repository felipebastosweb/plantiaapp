@page "/fabricantes/delete"
@using Microsoft.EntityFrameworkCore
@using PlantiaApp.Site.Data
@inject IDbContextFactory<PlantiaApp.Site.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Fabricante</h2>
    <hr />
    @if (fabricante is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Nome</dt>
            <dd class="col-sm-10">@fabricante.Nome</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Imagem</dt>
            <dd class="col-sm-10">@fabricante.Imagem</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Site</dt>
            <dd class="col-sm-10">@fabricante.Site</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Telefone</dt>
            <dd class="col-sm-10">@fabricante.Telefone</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@fabricante.Email</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Fax</dt>
            <dd class="col-sm-10">@fabricante.Fax</dd>
        </dl>
        <EditForm method="post" Model="fabricante" OnValidSubmit="DeleteFabricante" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(fabricante is null)">Delete</button> |
            <a href="/fabricantes">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Fabricante? fabricante;

    [SupplyParameterFromQuery]
    private Guid Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        fabricante = await context.Fabricante.FirstOrDefaultAsync(m => m.Id == Id);

        if (fabricante is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteFabricante()
    {
        using var context = DbFactory.CreateDbContext();
        context.Fabricante.Remove(fabricante!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/fabricantes");
    }
}
