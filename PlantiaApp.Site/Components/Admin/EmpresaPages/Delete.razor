@page "/empresas/delete"
@using Microsoft.EntityFrameworkCore
@using PlantiaApp.Site.Data
@inject IDbContextFactory<PlantiaApp.Site.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Empresa</h2>
    <hr />
    @if (empresa is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">ApplicationUserId</dt>
            <dd class="col-sm-10">@empresa.ApplicationUserId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">RazaoSocial</dt>
            <dd class="col-sm-10">@empresa.RazaoSocial</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">NomeFantasia</dt>
            <dd class="col-sm-10">@empresa.NomeFantasia</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Cnpj</dt>
            <dd class="col-sm-10">@empresa.Cnpj</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">EnderecoId</dt>
            <dd class="col-sm-10">@empresa.EnderecoId</dd>
        </dl>
        <EditForm method="post" Model="empresa" OnValidSubmit="DeleteEmpresa" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(empresa is null)">Delete</button> |
            <a href="/empresas">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Empresa? empresa;

    [SupplyParameterFromQuery]
    private Guid Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        empresa = await context.Empresa.FirstOrDefaultAsync(m => m.Id == Id);

        if (empresa is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteEmpresa()
    {
        using var context = DbFactory.CreateDbContext();
        context.Empresa.Remove(empresa!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/empresas");
    }
}
